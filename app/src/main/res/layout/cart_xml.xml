<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/textdelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text ="deliver to:"
                android:textSize ="25dp">
            </EditText>

            <Button
                android:layout_width="124dp"
                android:layout_height="59dp"
                android:layout_gravity="end"
                android:text="change"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                >
            </Button>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Username"
                android:layout_below="@+id/textdelivery"
                >
            </EditText>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    >
                </ImageView>
                <Button
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="Qty"
                    >
                </Button>
                <TextView
                    android:id="@+id/deli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery by "
                    android:layout_below="@id/qty">
                </TextView>
                <EditText
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="day"
                    android:layout_toEndOf="@id/deli"
                    android:layout_below="@+id/qty">
                </EditText>
                <EditText
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="month"
                    android:layout_toEndOf="@id/day"
                    android:layout_below="@+id/qty">
                </EditText>
                <EditText
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="date"
                    android:layout_toEndOf="@id/month"
                    android:layout_below="@+id/qty">
                </EditText>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/qty">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/prname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="product name"
                            android:layout_toEndOf="@id/img"
                            android:textColorHint="@color/black">
                        </EditText>


                        <TextView
                            android:id="@+id/size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/prname"
                            android:text="size:"
                            android:textSize="20dp">
                        </TextView>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:inputType="number"
                            android:layout_below="@id/prname"
                            android:layout_toRightOf="@id/size"
                            >
                        </EditText>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/size"
                            android:hint="price"
                            android:textSize="30dp">
                        </EditText>

                    </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
                <com.google.android.material.bottomappbar.BottomAppBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="remove">
                        </Button>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Save for later">
                        </Button>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="buy now">
                        </Button>
                    </LinearLayout>
                </com.google.android.material.bottomappbar.BottomAppBar>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>