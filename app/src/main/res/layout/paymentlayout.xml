<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:text="Select Payment Method"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelection"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"> <!-- Change to vertical orientation -->

        <Button
            android:id="@+id/btnCashOnDelivery"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash on Delivery"
        android:onClick="onCashOnDeliveryClicked" />

        <Button
            android:id="@+id/btnOnlinePay"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Pay"
        android:onClick="onOnlinePayClicked" />
    </LinearLayout>

</RelativeLayout>
